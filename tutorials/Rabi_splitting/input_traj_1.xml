<simulation verbosity='high'>
  <output prefix='simu_1'>
    <properties stride='4' filename='out'>  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_cv{electronvolt}, potential{electronvolt}] </properties>
    <trajectory filename='xc' stride='4' format='xyz'> x_centroid{angstrom} </trajectory>
    <checkpoint filename='checkpoint' stride='4' overwrite='True'/>
  </output>
  <total_steps>40000</total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <ffcavphsocket name='lammps' mode='unix' pbc='False'>
    <address>h2o-pimd.1.run_NVE.E0_4e-4</address>
  </ffcavphsocket>
  <system>
    <initialize nbeads='1'>
      <file mode='xyz' units='angstrom'> init.xyz </file>
      <cell mode='manual' units='atomic_unit'>
	    [35.233, 0.0, 0.0, 0.0, 35.233, 0.0, 0.0, 0.0, 35.233]
      </cell>
      <velocities mode='thermal' units='kelvin'> 300 </velocities>
    </initialize>
    <forces>
      <force forcefield='lammps'> </force>
    </forces>
    <motion mode='dynamics'>
      <dynamics mode='nve'>
        <timestep units='femtosecond'> 0.5 </timestep>
      </dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 300 </temperature>
    </ensemble>
  </system>
</simulation>
